                                                                                    <input type="email" class="form-control" name="email" id="email" value="<%= list[i].email %>" />
                                                                                    <span class="messages"></span>
                                                                                </div>
                                                                                </div>
                                                                            <div class="form-group row">
                                                                                <label class="col-sm-3 col-form-label">Mobile</label>
                                                                                <div class="col-sm-9">
                                                                                    <input type="text" class="form-control" name="mobile" id="name" value="<%= list[i].mobile %>" />
                                                                                    <span class="messages"></span>
                                                                                </div>
